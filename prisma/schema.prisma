generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id                    Int                  @id @default(autoincrement())
  code                  String               @unique
  name                  String
  network               String
  commercialAssistantId Int?              
  CommercialAssistant   CommercialAssistant? @relation(fields: [commercialAssistantId], references: [id])

  @@map("customers")
}

model CommercialAssistant {
  id            Int                  @id @default(autoincrement())
  name          String
  email         String               @unique
  phone         String               @unique
  Customers     Customer[]

  @@map("commercial_assistants")
}
